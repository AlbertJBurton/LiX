    \RequirePackage{xparse}

    \NewDocumentCommand{\license}{mmmg}{%
        \usepackage[type={#1},modifier={#2},version={#3}]{doclicense}%
        \IfValueTF{#4}{% If two arguments are given.
            \newcommand{\theCopyrightHolder}{#4}
        }{
