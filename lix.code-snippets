    "Add a top-level heading": {
        "scope": "latex",
        "prefix": ["h", "heading", "section", "chapter"],
        "body": ["\\h{$1}$0"],
        "description": "Add a top-level heading."
    },
    "Add a 2nd-level heading": {
        "scope": "latex",
        "prefix": ["hh", "subheading", "subsection"],
