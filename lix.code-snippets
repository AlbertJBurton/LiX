// Snippets for latex writing using the lix package.
// Author: Nicklas Vraa.
{
    // ABSTRACT: ---------------------------------------------------------------
    "Add an abstract": {
        "scope": "latex",
        "prefix": ["abstract"],
        "body": ["\\abstract{${1:your summary}}$0"],
        "description": "Add an abstract that summarizes your findings."
    },
    // ADD: --------------------------------------------------------------------
    "Import from separate tex-file": {
        "scope": "latex",
        "prefix": ["add", "input", "import"],
        "body": ["\\add{${1:file.tex}}$0"],
        "description": "Import from separate tex-file."
    },
    // AUTHORS: ----------------------------------------------------------------
    "Add authors": {
        "scope": "latex",
        "prefix": ["authors"],
        "body": ["\\authors{${1:first}}$0"],
        "description": "Add authors."
    },
    // BIBLIOGRAPHY: -----------------------------------------------------------
    "Insert a bibliography": {
        "scope": "latex",
        "prefix": ["bibliography"],
        "body": ["\\bib{${1:path/to/file}}{${2|style,unsrt,ieeetr|}}$0"],
        "description": "Insert a bibliography."
    },
    // BLURB: ------------------------------------------------------------------
    "Add a blurb": {
        "scope": "latex",
        "prefix": ["blurb"],
        "body": ["\\blurb{${1:flavor-text}}$0"],
        "description": "Add flavor-text to the back cover."
    },
    // CODE: -------------------------------------------------------------------
    "Insert a codeblock": {
        "scope": "latex",
        "prefix": ["codeblock"],
        "body": ["\\code{${1:label}}{${2|lang,python,c,c++,javascript,latex|}}{\n${3:...}\n}{${4:caption}}$0"],
        "description": "Insert a codeblock."
    },
    // COVER: ------------------------------------------------------------------
    "Add cover art": {
        "scope": "latex",
        "prefix": ["cover"],
        "body": ["\\cover{${1:path/to/front.pdf}}{${2:path/to/back.pdf}}$0"],
        "description": "Insert a cover."
    },
    // DATE: -------------------------------------------------------------------
    "Add a date": {
        "scope": "latex",
        "prefix": ["date"],
        "body": ["\\date{$CURRENT_MONTH_NAME $CURRENT_DATE, $CURRENT_YEAR}$0"],
        "description": "Add a date."
    },
